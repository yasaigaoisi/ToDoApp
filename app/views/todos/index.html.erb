<p style="color: green"><%= notice %></p>

<h1 class="text-3xl font-bold underline">Todos</h1>

<div class="overflow-x-auto">
  <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
    <thead class="ltr:text-left rtl:text-right">
      <tr>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">タイトル</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">ステータス</th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200">
      <% @todos.each do |todo| %>
        <tr class="group hover:bg-gray-100 cursor-pointer" onclick="window.location='<%= todo_path(todo) %>';">
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900 group-hover:text-gray-700"><%= todo.title %></td>
          <td class="flex justify-center whitespace-nowrap px-4 py-2 text-gray-700"><%= todo.completed ? '完了' : '未完了' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<span class="inline-flex -space-x-px overflow-hidden rounded-md border bg-white shadow-sm">
  <button class="inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative">
    <%= link_to "新規", new_todo_path %>
  </button>
</span>
