<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "タイトル", class: "block text-xs font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm" %>
  </div>

  <div>
    <%= form.label "内容", class: "block text-xs font-medium text-gray-700" %>
    <%= form.text_field :content, class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm" %>
  </div>

  <div>
    <%= form.label "完了", class: "block text-xs font-medium text-gray-700" %>
    <%= form.check_box :completed, class: "h-4 w-4 rounded border-gray-300 text-primary-600 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50 focus:ring-offset-0 disabled:cursor-not-allowed disabled:text-gray-400" %>
  </div>

  <div>
    <%= form.submit value: "更新", class: "inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium text-white" %>
  </div>
<% end %>
